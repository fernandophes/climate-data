<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #000;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ufersa.cc.pdclient.controllers.OnDemandController">
   <children>
      <Label style="-fx-text-fill: #fff;" text="Dashboard">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <HBox alignment="CENTER" spacing="8.0">
         <children>
            <Label layoutX="287.0" layoutY="23.0" text="Exibindo" textFill="WHITE" />
            <Label fx:id="totalCapturesLabel" layoutX="269.0" layoutY="23.0" text="0" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label text="capturas via" textFill="WHITE" />
            <Label fx:id="mqLabel" layoutX="283.0" layoutY="21.0" text="HTTP" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Separator opacity="0.5" orientation="VERTICAL" />
            <VBox alignment="CENTER">
               <children>
                  <Label style="-fx-text-fill: #fff;" text="Filtrar por região">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="regionsComboBox" onAction="#filterByRegion" prefWidth="150.0" />
               </children>
            </VBox>
            <Separator layoutX="371.0" layoutY="10.0" opacity="0.5" orientation="VERTICAL" />
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshTable" text="Atualizar" />
         </children>
      </HBox>
      <TableView fx:id="table">
        <columns>
          <TableColumn fx:id="regionColumn" prefWidth="110.0" text="Região" />
          <TableColumn fx:id="pressureColumn" prefWidth="110.0" text="Pressão" />
            <TableColumn fx:id="radiationColumn" prefWidth="110.0" text="Radiação" />
            <TableColumn fx:id="temperatureColumn" prefWidth="110.0" text="Temperatura" />
            <TableColumn fx:id="humidityColumn" prefWidth="110.0" text="Umidade" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
